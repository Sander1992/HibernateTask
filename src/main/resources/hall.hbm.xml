<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.softserve.edu.hibernatetask.entity.Hall" table="hall">
        <id name="hallId" column="hall_id" type="java.lang.Integer">
            <generator class="increment"/> </id>
        <property name="name" column="name"
                  type="java.lang.String" />
        <set name="exhibits">
            <key column="fk_hall_id"></key>
            <one-to-many class="com.softserve.edu.hibernatetask.entity.Exhibit"/>
        </set>
       <set name="employees" table="employee_hall" lazy="false">
           <key column="hall_id"></key>
           <many-to-many class="com.softserve.edu.hibernatetask.entity.Employee" column="empl_id"/>
       </set>
    </class>
</hibernate-mapping>

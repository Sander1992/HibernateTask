<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.softserve.edu.hibernatetask.entity.Exhibit" table="exhibit">
        <id name="exhibitId" column="exhib_id" type="java.lang.Integer">
            <generator class="increment"/> </id>
        <property name="name" column="name"
                  type="java.lang.String" />
        <property name="date" column="date"
                  type="java.lang.String" />
        <property name="material" column="material"
                  type="java.lang.String" />
        <property name="author" column="author"
                  type="java.lang.String" />
        <property name="technic" column="technic"
                  type="java.lang.String" />
        <many-to-one name="hall" class="com.softserve.edu.hibernatetask.entity.Hall" column="fk_hall_id" />
    </class>
</hibernate-mapping>
